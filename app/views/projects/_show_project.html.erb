
<dl class="dl-horizontal">

  <dt>Project title: </dt><dd><%= @project.title %></dd>
  <dt>Organization: </dt><dd><%= @organization.name %></dd>
  <dt>Project deadline: </dt><dd>
    <% if @project.deadline %>
      <%= @project.deadline %>
    <% else %>
       none stated
    <% end %>

  </dd>
  <dt>Vision: </dt><dd><%= @project.vision %></dd>
  <dt>Need: </dt><dd><%= @project.need %></dd>
  <dt>Description: </dt><dd><%= @project.description %></dt>
  <dt>Benefit of project: </dt><dd><%= @project.benefit %><dd>


  <%= button_to "Update Project", edit_project_path(@project), :class => "button", :id => "get-project-edit", :method => :get  %>
  <%= button_to "Delete Project", project_path(@project), :class => "button", :method => :delete  %>
