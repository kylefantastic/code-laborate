  <div id="update_org_form">
    <%= form_for :organization, url: organizations_path, html: {id:"edit-org-form", role: "form"} do |f| %>
      <% if @organization.errors.any? %>
        <div id="error_explanation">
          <h3>
            <%= pluralize(@organization.errors.count, "error") %> prohibited
            this project from being saved:
          </h3>
        </div>
      <% end %>

      <div class="form-group">
        <p>
          <%= f.label :name, "Organization Name" %>
          <%= error_show(@organization, :name) %>
          <%= f.text_field :name, class: "form-control" %>
        </p>

        <p>
          <%= f.label :website_url, "Website" %>
          <%= error_show(@organization, :website_url) %>
          <%= f.text_field :website_url, class: "form-control" %>
        </p>

        <p>
          <%= f.label :description %><br>
          <%= error_show(@organization, :description) %>
          <%= f.text_area :description, placeholder: "Add your mission or description here", class: "form-control" %>
        </p>

